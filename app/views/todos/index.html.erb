<div class="main-container" style="background: #fff; border: 1px solid #666; margin-top: 5%; margin-left: 10%; margin-right: 10%;  padding: 5%">
<p id="notice"><%= notice %></p>

<h1>Note taking app!</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.desc %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% cache 'todo_index', expires_in: 1.days do %>
<%= link_to 'New Todo', new_todo_path %>
</div>
<% end %>
